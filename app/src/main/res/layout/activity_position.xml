<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_position"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.temple.gamemanageradmin.PositionActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start positioning"
        android:id="@+id/start_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop positioning"
        android:id="@+id/stop_btn"
        android:layout_marginStart="11dp"
        android:layout_alignBaseline="@+id/start_btn"
        android:layout_alignBottom="@+id/start_btn"
        android:layout_toEndOf="@+id/start_btn" />

    <TextView
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:text="No position detected yet"
        android:lines="10"
        android:id="@+id/current_position_tv"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.43"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/stop_btn"
        android:layout_alignParentStart="true" />
</RelativeLayout>
